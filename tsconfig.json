{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "isolatedModules": false
  },
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "typings/main"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "src/custom-typings.d.ts",
    "typings/browser.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "resolveGlobs": true,
    "forkChecker": true,
    "cacheDirectory": "node_modules/.awesome-typescript-loader-cache"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "files": [
    "./src/app/about/about.spec.ts",
    "./src/app/about/about.ts",
    "./src/app/app.e2e.ts",
    "./src/app/app.spec.ts",
    "./src/app/app.ts",
    "./src/app/directives/router-active.ts",
    "./src/app/home/directives/x-large.spec.ts",
    "./src/app/home/directives/x-large.ts",
    "./src/app/home/home.e2e.ts",
    "./src/app/home/home.spec.ts",
    "./src/app/home/home.ts",
    "./src/app/home/services/title.spec.ts",
    "./src/app/home/services/title.ts",
    "./src/app/reactDemo/country-view-model.ts",
    "./src/app/reactDemo/reactDemo.ts",
    "./src/custom-typings.d.ts",
    "./src/main.ts",
    "./src/polyfills.ts",
    "./src/vendor.ts",
    "src/custom-typings.d.ts",
    "typings/browser.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
